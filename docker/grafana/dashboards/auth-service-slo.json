  "panels": [
    {
      "title": "Request Rate (req/s)",
      "description": "HTTP requests per second, broken down by status code. A sudden spike in 5xx (red) indicates server errors.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (status_code)",
          "legendFormat": "{{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" },
        "overrides": []
      }
    },
    {
      "title": "Error Rate (%) — SLO: 99.5% availability",
      "description": "Percentage of 5xx responses. The red dashed line is the SLO threshold (0.5%). Staying below = healthy.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
          "legendFormat": "Error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.5 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Latency Percentiles — SLO: p95 < 500ms",
      "description": "p50, p95, and p99 request latencies. The p95 line should stay below 500ms (our SLO target).",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      }
    },
    {
      "title": "Active Requests",
      "description": "Number of HTTP requests currently being processed. High sustained values indicate saturation.",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "http_active_requests",
          "legendFormat": "Active"
        }
      ]
    },
    {
      "title": "Rate Limit Rejections (/s)",
      "description": "Rate-limited requests (429s) per second. Spikes indicate clients hitting limits — possibly abuse or misconfigured clients.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(rate_limit_hits_total[5m])) by (key_type)",
          "legendFormat": "{{key_type}}"
        }
      ]
    },
    {
      "title": "Cache Hit Ratio",
      "description": "Percentage of cache lookups that returned cached data. Higher = less load on the data store.",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(cache_operations_total{operation=\"hit\"}[5m])) / sum(rate(cache_operations_total[5m])) * 100",
          "legendFormat": "Hit %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 80 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Task Queue Depth",
      "description": "Number of tasks waiting in each queue. Growing depth = workers can't keep up. Consider scaling workers.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "task_queue_depth",
          "legendFormat": "{{queue_name}}"
        }
      ]
    },
    {
      "title": "Token Blacklist Checks (/s)",
