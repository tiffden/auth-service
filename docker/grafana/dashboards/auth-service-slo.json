      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(token_blacklist_checks_total[5m])) by (result)",
          "legendFormat": "{{result}}"
        }
      ]
    }
